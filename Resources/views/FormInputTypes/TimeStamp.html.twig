<div class="form-group {{inputId}}-container{% if error %} has-error{% endif %}">
    <label for="{{inputId}}" class="col-sm-5">{{configuration['description']}}</label>
    <div class="col-sm-7">
        <input {% if disabled %}disabled="disabled"{% endif %} type="datetime-local" class="form-control" id="{{inputId}}" name="{{inputName}}" placeholder="{{(configuration['placeholder'] is defined ? configuration['placeholder'] : placeholder)}}" value="{% if value %}{{value | date(configuration['dateTimeFormat'], false)}}{% endif %}" />
        <p class="form-error-text {{inputId}}-error">{{error}}</p>
    </div>
</div>
